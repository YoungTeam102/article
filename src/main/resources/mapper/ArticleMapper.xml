<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.igniubi.article.mapper.IArticleMapper">
    <resultMap id="BaseMap" type="com.igniubi.article.model.Article">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="auther" column="auther" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="date_id" column="dateId" jdbcType="VARCHAR"/>
        <result property="create_time" column="createTime" jdbcType="INTEGER"/>
    </resultMap>
    <sql id="Base_Column_List" >
    id, title, auther, content, date_id, create_time
  </sql>

    <select id="get" resultMap="BaseMap">
        SELECT
        <include refid="Base_Column_List"></include>
        FROM article
        where id = #{id,jdbcType=INTEGER}
    </select>

    <select id="selectArticleByDate" resultMap="BaseMap">
        SELECT
        <include refid="Base_Column_List"></include>
        FROM article
        where date_id = #{dateId,jdbcType=VARCHAR}
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id" parameterType="com.igniubi.article.model.Article">
        insert into article(title, auther, content, date_id,create_time)
          values (#{title,jdbcType=VARCHAR}, #{auther,jdbcType=VARCHAR}, #{content,jdbcType=VARCHAR},#{dateId,jdbcType=VARCHAR}, #{createTime,jdbcType=INTEGER})
    </insert>

    <insert id="insertArticleSelective" useGeneratedKeys="true" keyProperty="id" parameterType="com.igniubi.article.model.Article">
        insert into article
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null">
                title,
            </if>
            <if test="auther != null">
                auther,
            </if>
            <if test="content != null">
                content,
            </if>
            <if test="dateId != null">
                date_id,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null">
                #{title,jdbcType=VARCHAR},
            </if>
            <if test="auther != null">
                #{auther,jdbcType=VARCHAR},
            </if>
            <if test="content != null">
                #{content,jdbcType=VARCHAR},
            </if>
            <if test="dateId != null">
                #{dateId,jdbcType=VARCHAR},
            </if>
            <if test="createTime != null">
                #{dateId,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>


</mapper>